{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["backend/**/*.js"],
      "env": {
        "node": true
      },
      "globals": {
        "process": "readonly",
        "global": "readonly"
      },
      "extends": ["./backend/.eslintrc.json"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "prettier"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-unused-vars": "off"
  }
}
